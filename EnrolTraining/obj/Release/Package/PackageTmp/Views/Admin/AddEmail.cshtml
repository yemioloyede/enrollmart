<script>


    function SendTestEmail() {
        var eml = $('#testemail').val();
        var sub = $('#EmailSubject').val();
        var body = tinymce.get('EmailBody').getContent();

        if (eml == "") {
            alert('Please provide Email Address')
            return;
        }
        else
        {
            var checkemail = isValidEmailAddress(eml);
            if (checkemail == false)
            {
                alert('Invalid Email Address')
                return;
            }
        }

        if (sub == "") {
            alert('Please provide Subject of Email')
            return;
        }

        if (body == "")
        {
            alert('Email Body is empty. cannot send email')
            return;
        }
            $.ajax({
                type: "POST",
                url: '/Admin/SendEmail',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify({
                    "email": eml,
                    "subject": sub,
                    "body": body
                }),
            }).done(function (data) {
                if (data == true) {
                    alert('Email send successfully');
                }
                else {
                    alert(data);
                }
            });

    }

    $(document).ready(function (e) {

   })
</script>

