@using Vereyon.Web
@model EnrolTraining.Models.EmailCampaign
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<script>
    $(document).ready(function(e){
   })
</script>

<div class='page-title'>
    <h1>Add / Edit Email Campaign</h1>
</div>


<div class="FormWrapper">
    <div class="row">
        <div class="col-md-12">
            <section>
                @using (Html.BeginForm("AddEmailCampaign", "Admin", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.RenderFlashMessages()
                    @*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@
                    @Html.Hidden("ProfileID", Model == null ? 0 : Model.ProfileID)

                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.MailFrom, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.MailFrom, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.DisplayName, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.BCC, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.BCC, new { @class = "form-control" })
                        </div>
                    </div>


                        <div class="form-group">
                            @Html.LabelFor(m => m.IsActive, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                <div style="border:1px solid lightgray; padding:10px 10px 0px 10px; border-radius:5px; background-color:white">
                                    <div class="checkbox" style="padding-top: 0px;margin-bottom: 0px;padding-bottom: 0px;min-height: 0px;">
                                        <label>
                                            @Html.CheckBoxFor(m => m.IsActive, new { @style = "margin-top:1px;" })
                                            Active
                                        </label>
                                    </div>
                                    <div class="checkbox" style="padding-top: 0px;margin-bottom: 0px;padding-bottom: 0px;min-height: 0px;">
                                        <label>
                                            @Html.CheckBoxFor(m => m.StopIfRegister, new { @style = "margin-top:1px;" })
                                            Stop this campaign if the customer registers for a renewal class
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.SendToAllCourseTypes, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                <div style="border:1px solid lightgray; padding:10px 10px 0px 10px; border-radius:5px; background-color:white">
                                    <div class="radio" style="padding-top: 0px;margin-bottom: 0px;padding-bottom: 0px;min-height: 0px;">
                                        <label>
                                            @Html.RadioButtonFor(m => m.SendToAllCourseTypes, "Yes", new { @style = "margin-top:1px;", @checked = "checked" })
                                            Yes
                                        </label>
                                    </div>
                                    <div class="radio" style="padding-top: 0px;margin-bottom: 0px;padding-bottom: 0px;min-height: 0px;">
                                        <label>
                                            @Html.RadioButtonFor(m => m.SendToAllCourseTypes, "No", new { @style = "margin-top:1px;" })
                                            No
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr style="border-color:#e8e6e6" />
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10 text-right">
                                <a href="/Admin/EmailCampaigns" class="btn btn-default">Cancel</a>
                                <input type="submit" value="Save" class="btn btn-success" />
                            </div>
                        </div>

                }
            </section>
        </div>

    </div>
</div>
<div class='clear'></div>
