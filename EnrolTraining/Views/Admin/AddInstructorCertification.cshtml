@model EnrolTraining.Models.InstructorCertification
@{
    int id = ViewBag.id;
}

<script>
    $(document).ready(function (e) {
        $("input[name^='Initial']").datetimepicker({
            timepicker: false,
            format: 'm/d/y',
        });

        $("input[name^='Expires']").datetimepicker({
            timepicker: false,
            format: 'm/d/y',
        });

    })
</script>

<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <section>
            @using (Html.BeginForm("AddInstructorCertification", "Admin", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="modal-header">
                    <h1>Instructor Certification - @ViewBag.name</h1>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.Hidden("InstructorID", id)
                            @Html.Hidden("CertificationID", Model == null ? 0 : Model.CertificationID)

                            <div class="form-group">
                                @Html.LabelFor(m => m.DisciplineID, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(m => m.DisciplineID, DropdownLists.Disciplines(Model == null ? "0" : Model.DisciplineID.ToString(), true, "--Choose--"), new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.DisciplineID, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(m => m.Initial, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Initial, "{0:MM/dd/yy}", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Initial, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Expires, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Expires, "{0:MM/dd/yy}", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Expires, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Options", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    <div style="border:1px solid lightgray; padding:10px 10px 0px 10px; border-radius:5px; background-color:white">
                                        <div class="checkbox" style="padding-top: 0px;margin-bottom: 0px;padding-bottom: 0px;min-height: 0px;">
                                            <label>
                                                @Html.CheckBoxFor(m => m.IsTCF, new { @style = "margin-top:1px;" })
                                                TCF
                                            </label>
                                        </div>
                                        <div class="checkbox" style="padding-top: 0px;margin-bottom: 0px;padding-bottom: 0px;min-height: 0px;">
                                            <label>
                                                @Html.CheckBoxFor(m => m.isRF, new { @style = "margin-top:1px;" })
                                                RF
                                            </label>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class='modal-footer'>
                        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
              }
            </section>
     </div>
</div>
