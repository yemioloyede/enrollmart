@using Vereyon.Web
@model EnrolTraining.Models.ChangePasswordVM
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class='page-title'>
    <h1>Password Change</h1>
</div>

<div class="FormWrapper">
    <div class="row">
        <div class="col-md-12">
            <section>
                @using (Html.BeginForm("ChangePassword", "Admin", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.RenderFlashMessages()
                    <div class="form-group">
                        @Html.LabelFor(m => m.CurrentPassword, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.RepeatPassword, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.RepeatPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.RepeatPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                        <hr style="border-color:#e8e6e6" />
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10 text-right">
                                                <input type="submit" value="Chnage Password" class="btn btn-success" />
                                            </div>
                                        </div>

                }
            </section>
        </div>

    </div>
</div>
<div class='clear'></div>
